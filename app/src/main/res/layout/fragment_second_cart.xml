<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".SecondCartFragment">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/address_textView"
       android:layout_marginTop="20dp"
       android:text="Address :"
       android:textSize="18sp"
       android:textStyle="bold"
       />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_textView"
        android:layout_marginTop="8dp"
        android:hint="Address"
        android:id="@+id/address_editText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zipCode_textView"
        android:layout_marginTop="20dp"
        android:text="Zip Code :"
        android:layout_below="@id/address_editText"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/zipCode_textView"
        android:layout_marginTop="8dp"
        android:hint="Zip Code"
        android:id="@+id/zipCode_editText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneNumber_textView"
        android:layout_marginTop="20dp"
        android:text="Phone Number :"
        android:layout_below="@id/zipCode_editText"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneNumber_textView"
        android:layout_marginTop="8dp"
        android:hint="Phone Number"
        android:id="@+id/phoneNumber_editText"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_textView"
        android:layout_marginTop="20dp"
        android:text="Email :"
        android:layout_below="@id/phoneNumber_editText"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_textView"
        android:layout_marginTop="8dp"
        android:hint="Email"
        android:id="@+id/email_editText"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_btn"
            android:layout_marginEnd="20dp"
            android:text="Back" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_btn"
            android:layout_marginEnd="20dp"
            android:text="Next" />
    </LinearLayout>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@id/linearLayout_btn"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="20dp"
      android:text="Warning"
      android:textColor="#D32F2F"
      android:visibility="gone"/>
    </RelativeLayout>